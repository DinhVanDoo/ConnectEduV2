@page
@using ConnectEduV2.Models
@model ConnectEduV2.Pages.Class.CreateClassModel
@{
}
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="banner_content text-center">
                        <h2>Create Class</h2>
                        <div class="page_link">
                            <a href="index.html">Home</a>
                            <a href="courses.html">Create Class</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="popular_courses section_gap">
    <div class="container">
        <h3 class="mb-30 title_color">Form Element</h3>
        <form method="post" asp-page="Class/CreateClass">
            <span>@ViewData["EmptyError"]</span>
            <span>@ViewData["Success"] </span>
            <div class="form-group">
                <div>
                    <p>Choose School</p>
                    <ul class="nav">
                        @if (Model.schools != null)
                        {
                            @foreach (School schools in Model.schools)
                            {
                                @if (Model.SchoolId == schools.Id)
                                {
                                    <li class="nav-item">
                                        <a style="color:brown" class="genric-btn default active"
                               asp-page="/Class/CreateClass" 
                               asp-route-schoolID=""
                               asp-route-departmentID=""
                               >
                                            @schools.Name
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="genric-btn default active" asp-page="/Class/CreateClass"
                                       
                               asp-route-schoolID="@schools.Id"
                               asp-route-departmentID="@Model.DepartmentId"
                               >
                                            @schools.Name
                                        </a>
                                    </li>
                                }

                            }

                        }
                    </ul>

                </div>
                @if (Model.department != null)
                {
                    <div>
                        <p>Choose Department</p>
                        <ul class="nav">

                            @foreach (Department departments in Model.department)
                            {
                                @if (Model.DepartmentId == departments.Id)
                                {

                                    <li class="nav-item">
                                        @* <a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = departments.Id, semesterID = ViewBag.SemesterID, key = ViewBag.Key })">@departments.Name</a>*@
                                        <a style="color: brown" class="genric-btn default " asp-page="/Class/CreateClass"
                               asp-route-departmentID="">
                                            @departments.Name
                                        </a>
                                    </li>
                                }
                                else
                                {

                                    <li class="nav-item">
                                        @* <a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = departments.Id, semesterID = ViewBag.SemesterID, key = ViewBag.Key })">@departments.Name</a>*@
                                        <a style="" class="genric-btn default " asp-page="/Class/CreateClass"
                               asp-route-schoolID="@Model.SchoolId"
                               asp-route-departmentID="@departments.Id">
                                            @departments.Name
                                        </a>
                                    </li>
                                }

                            }

                        </ul>

                    </div>
                }
                @if (Model.semesters != null)
                {
                    <div>
                        <p>Choose Semester</p>
                        <ul class="nav">

                            @foreach (Semester semesters in Model.semesters)
                            {
                                @if (Model.SemesterId == semesters.Id)
                                {
                                    <li class="nav-item">
                                        @*<a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = ViewBag.DepartmentID, semesterID = semesters.Id, key = ViewBag.Key })">@semesters.Name</a>*@
                                        <a style="color: brown" class="genric-btn default" asp-controller="Class" asp-action="CreateClass"
                               asp-route-schoolID="@Model.SchoolId"
                               asp-route-departmentID="@Model.DepartmentId"
                               asp-route-semesterID="">
                                            @semesters.Name
                                        </a>
                                    </li>
                                }
                                else

                                {
                                    <li class="nav-item">
                                        @*<a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = ViewBag.DepartmentID, semesterID = semesters.Id, key = ViewBag.Key })">@semesters.Name</a>*@
                                        <a class="genric-btn default" asp-controller="Class" asp-action="CreateClass"
                               asp-route-schoolID="@Model.SchoolId"
                               asp-route-departmentID="@Model.DepartmentId"
                               asp-route-semesterID="@semesters.Id">
                                            @semesters.Name
                                        </a>
                                    </li>
                                }

                            }

                        </ul>
                    </div>
                }
                @if (Model.subjects != null)
                {
                    <div>
                        <p>Choose Subject</p>
                        <ul class="nav">

                            @foreach (Subject subject in Model.subjects)
                            {
                                @if (Model.SubjectId == subject.Id)
                                {
                                    <li class="nav-item">
                                        @*<a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = ViewBag.DepartmentID, semesterID = semesters.Id, key = ViewBag.Key })">@semesters.Name</a>*@
                                        <a style="color: brown" class="genric-btn default" asp-controller="Class" asp-action="CreateClass"
                               asp-route-schoolID="@Model.SchoolId"
                               asp-route-departmentID="@Model.DepartmentId"
                               asp-route-semesterID="@Model.SemesterId"
                               asp-route-subjectID="">
                                            @subject.Name
                                        </a>
                                    </li>
                                }
                                else

                                {
                                    <li class="nav-item">
                                        @*<a class="genric-btn default" href="@Url.Action("Index", new { schoolID = ViewBag.SchoolID, departmentID = ViewBag.DepartmentID, semesterID = semesters.Id, key = ViewBag.Key })">@semesters.Name</a>*@
                                        <a class="genric-btn default" asp-controller="Class" asp-action="CreateClass"
                               asp-route-schoolID="@Model.SchoolId"
                               asp-route-departmentID="@Model.DepartmentId"
                               asp-route-semesterID="@Model.SemesterId"
                               asp-route-subjectID="@subject.Id">
                                            @subject.Name
                                        </a>
                                    </li>
                                }

                            }

                        </ul>
                    </div>
                }

                <input asp-for="Subject" type="text" hidden value="@Model.SubjectId">
            </div>
            <!-- Các trường nhập liệu -->
            <div class="mt-10">
                <p>Class Name (*)</p>
                <input type="text" asp-for="ClassName"  placeholder="Class Name" required class="single-input">
                <span asp-validation-for="ClassName" class="text text-danger"></span>
            </div>
            <div class="mt-10">
                <p>Class Description (*)</p>
                <textarea asp-for="Description" maxlength="1000"class="single-textarea" placeholder="Description" required></textarea>
                <span asp-validation-for="Description" class="text text-danger"></span>
            </div>
            <div class="mt-10">
                <p>Start</p>
                <input asp-for="StartDate" type="datetime-local"  placeholder="Start Date" class="single-input">

            </div>
            <div class="mt-10">
                <p>End</p>
                <input asp-for="EndDate" type="datetime-local"  placeholder="End Date" class="single-input">
            </div>
            <div class="mt-10">

                <p>Class Price (*)</p>
                <input asp-for="Price" type="text"  placeholder="Price" required class="single-input">
                <span asp-validation-for="Price" class="text text-danger"></span>
            </div>
            <div class="mt-10">
                <p>Course Path (*)</p>
                <input asp-for="CoursePath" type="text"  placeholder="Course Path" required class="single-input">
                <span asp-validation-for="CoursePath" class="text text-danger"></span>
            </div>
            <div class="mt-10">
                <p>Number of sessions </p>
                <input asp-for="SeatNumber" type="text"  placeholder="Seat Number" required class="single-input">
                <span asp-validation-for="SeatNumber" class="text text-danger"></span>
            </div>
            <div class="mt-10" style="justify-content:center">

                <input style="height:40px;line-height:0; margin:auto; text-align:center" type="submit" class="primary-btn" value="Create" />
            </div>

        </form>
    </div>

</section> 